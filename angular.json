{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "packages",
  "cli": {
    "packageManager": "pnpm"
  },
  "schematics": {
    "@schematics/angular:component": {
      "style": "scss",
      "changeDetection": "OnPush",
      "standalone": true,
      "displayBlock": true
    },
    "@schematics/angular:application": {
      "strict": true,
      "standalone": false,
      "style": "scss"
    }
  },
  "projects": {
    "cdk": {
      "projectType": "library",
      "root": "packages/cdk",
      "sourceRoot": "packages/cdk/src",
      "prefix": "cpng",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/cdk/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/cdk/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/cdk/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/cdk/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "components": {
      "projectType": "library",
      "root": "packages/components",
      "sourceRoot": "packages/components/src",
      "prefix": "cpng",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/components/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    },
    "cdk-dev-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/cdk-dev-app",
      "sourceRoot": "apps/cdk-dev-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/cdk-dev-app",
            "index": "apps/cdk-dev-app/src/index.html",
            "main": "apps/cdk-dev-app/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "apps/cdk-dev-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/cdk-dev-app/src/favicon.ico",
              "apps/cdk-dev-app/src/assets"
            ],
            "styles": ["apps/cdk-dev-app/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "cdk-dev-app:build:production"
            },
            "development": {
              "browserTarget": "cdk-dev-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "cdk-dev-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "apps/cdk-dev-app/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/cdk-dev-app/src/favicon.ico",
              "apps/cdk-dev-app/src/assets"
            ],
            "styles": ["apps/cdk-dev-app/src/styles.scss"],
            "scripts": []
          }
        }
      }
    },
    "components-dev-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/components-dev-app",
      "sourceRoot": "apps/components-dev-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/components-dev-app",
            "index": "apps/components-dev-app/src/index.html",
            "main": "apps/components-dev-app/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "apps/components-dev-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/components-dev-app/src/favicon.ico",
              "apps/components-dev-app/src/assets"
            ],
            "styles": ["apps/components-dev-app/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "components-dev-app:build:production"
            },
            "development": {
              "browserTarget": "components-dev-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "components-dev-app:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "polyfills": ["zone.js", "zone.js/testing"],
            "tsConfig": "apps/components-dev-app/tsconfig.spec.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "apps/components-dev-app/src/favicon.ico",
              "apps/components-dev-app/src/assets"
            ],
            "styles": ["apps/components-dev-app/src/styles.scss"],
            "scripts": []
          }
        }
      }
    },
    "auth": {
      "projectType": "library",
      "root": "packages/auth",
      "sourceRoot": "packages/auth/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "packages/auth/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/auth/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "packages/auth/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "packages/auth/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  }
}
